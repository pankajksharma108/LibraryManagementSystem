@using LibraryManagementSystem.Entity

@model BookResponseEntity
@{
    ViewData["Title"] = "GetBookById";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Update Book</h3>
                </div>
                <div class="card-body">
                    <!-- Add Book Form -->
                    <form asp-action="UpdateBookDetails" asp-controller="Book" method="post">
                        <div class="form-group mb-3">
                            <input asp-for="BookId" type="hidden" class="form-control" placeholder="Expense Id" />
                            <label for="Title">Title</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Enter Book Title" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="ISBN">ISBN</label>
                            <input asp-for="ISBN" type="text" class="form-control" placeholder="Enter ISBN Number" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="PublishedDate">Published Date</label>
                            <input asp-for="PublishedDate" type="date" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="AuthorName">Author Name</label>
                            <input asp-for="AuthorName" type="text" class="form-control" placeholder="Enter Author Name" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="CategoryName">Category</label>
                            <input asp-for="CategoryName" type="text" class="form-control" placeholder="Enter Book Category" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="IsAvailable">Status</label>
                            <select class="form-control" id="IsAvailable" name="IsAvailable">
                                <option value="true">Available</option>
                                <option value="false">Not Available</option>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary w-100 mb-2">Update</button>
                            <a href="/Book/GetBookDetails" class="btn btn-danger w-100">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            var responseId = '@TempData["ResponseId"]';
            var message = '@TempData["Message"]';

            showAlert(responseId, message);
        });
    </script>
}
